<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.suny.association.mapper.RolesMapper">
    <resultMap id="BaseResultMap" type="com.suny.association.pojo.po.Roles">
        <id column="role_id" property="roleId"/>
        <result column="role_name" property="roleName"/>
        <result column="role_create_time" property="createTime"/>
    </resultMap>


    <select id="queryAll" resultMap="BaseResultMap">
        SELECT
            role.role_id,
            role.role_name,
            role.role_create_time
        FROM roles AS role
    </select>

    <select id="queryById" parameterType="Integer">
        SELECT
            role.role_id,
            role.role_name,
            role.role_create_time
        FROM roles AS role
        WHERE role_id = #{roleId}
    </select>

    <select id="queryByName" parameterType="String">
        SELECT
            role.role_id,
            role.role_name,
            role.role_create_time
        FROM roles AS role
        WHERE role_name = #{roleName}
    </select>


    <select id="list" parameterType="map" resultMap="BaseResultMap">
        SELECT
            role.role_id,
            role.role_name,
            role.role_create_time
        FROM roles AS role
        LIMIT
            #{offset},
            #{limit}
    </select>

    <select id="queryCount" resultType="int">
        SELECT count(*)
        FROM operation;
    </select>


</mapper>